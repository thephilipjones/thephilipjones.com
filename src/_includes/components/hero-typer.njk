
<div class="relative z-10 h-full items-center flex flex-col sm:flex-row {{ structure.g_pageWidth }}">
  <div class="flex flex-auto flex-col sm:justify-center w-full h-full {{ heroSettings.headingTextColor or 'text-white' }} ">
    <div class="pt-4 pr-12 text-lg font-light sm:text-xl lg:text-3xl {{ heroSettings.subheadingTextColor }}">
        {{ heroSettings.subheadingText | safe }}
    </div>
    <div class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-semibold {{ heroSettings.headingTextCase }}">
      <div id="typer-text"></div>
    </div>
    {% if heroSettings.buttonText %}
      <div class="w-full mt-8 md:mt-12 ">
        <button href="{{ heroSettings.buttonURL }}" class="py-2 px-4  rounded-full w-full xs:w-auto leading-none {{ heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} hover:{{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} hover:{{ heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{{ heroSettings.buttonText }}</button>
      </div>
    {% endif %}
  </div>
  <div class="w-40 sm:w-64 my-4"><img class=" rounded-full border-8" src="/assets/images/headshot-wide.jpg") /></div>

</div>