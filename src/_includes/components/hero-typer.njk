
<div class="relative z-10 items-center flex flex-auto flex-col sm:flex-row justify-around {{ structure.g_pageWidth }}">
  <div class="flex sm:flex-auto flex-col sm:justify-center w-full sm:h-full {{ heroSettings.headingTextColor or 'text-white' }} ">
    <div class="pt-4 pr-12 text-lg font-light sm:text-xl lg:text-3xl {{ heroSettings.subheadingTextColor }}">
        {{ heroSettings.subheadingText | safe }}
    </div>
    <div class="text-2xl sm:text-3xl md:text-4xl lg:text-6xl font-semibold {{ heroSettings.headingTextCase }}">
      <div id="typer-text"></div>
    </div>
    {% if heroSettings.buttonText %}
      <div class="w-full mt-8 md:mt-12 ">
        <a href="{{ heroSettings.buttonURL }}" class="py-2 px-4  rounded-full w-full xs:w-auto leading-none {{ heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} hover:{{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} hover:{{ heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{{ heroSettings.buttonText }}</a>
        <span>&nbsp; or <a href="/resume">View my Resume</a>
      </div>
    {% endif %}
  </div>
  <div class="w-64 sm:w-80 my-4"><img class=" rounded-full border-8" src="/assets/images/headshot-wide.jpg") /></div>

</div>