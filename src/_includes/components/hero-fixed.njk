<header class="flex {{ heroSettings.bg.color or 'bg-black' }} lg:overflow-hidden {{ heroSettings.height.mobile or 'h-3/4' }} sm:{{ heroSettings.height.desktop or heroSettings.height.mobile or 'h-3/4' }}">

  {# Shared across hero components  #}
  {% if heroSettings.typerText %}
        {% include "components/hero-typer.njk" %}
  {% else %}
        {% include "components/hero-text-overlay.njk" %}
  {% endif %}

  <div class="absolute inset-0 z-negative  bg-fixed bg-no-repeat bg-cover {{ heroSettings.bg.imagePosition or 'bg-center' }} {{ heroSettings.bg.opacityMobile or 'opacity-100' }} md:{{ heroSettings.bg.opacityDesktop or heroSettings.bg.opacityMobile or 'opacity-100' }}" style="background-image: url(/assets/images/{{ heroSettings.bg.image }});"></div>

</header>