<footer class="print:hidden z-10">
  <div class="{{ colors.footerCustom.barBg or colors.footerDefault.barBg }}">
    <div class="py-12 md:flex md:items-center md:justify-between {{ structure.g_pageWidth }}"> {# px-4 sm:px-6 lg:px-8 #}
      <div class="flex justify-center md:order-2 {{ colors.socialIconsCustom or colors.socialIconsDefault }}">
        {% if structure.g_showFooterSocialIcons %}

          {# Display Social icons from _data/social.json  #}
          {% for site in social %}
            {% if site.url %}
              <a aria-label="Link to {{ site.platform }}" alt="Link to {{ site.platform }}" class="hover:{{ colors.socialIconsHoverCustom or colors.socialIconsHoverDefault }}" href="{{ site.url | url }}">
                {% svg site.platform, "mx-2 h-6 w-6 fill-current", site.platform, "footer" %}
              </a>
            {% endif %}
          {% endfor %}

        {% endif %}
      </div>
      <div class="mt-8 md:mt-0 md:order-1">
        <p class="text-center sm:text-left text-3xl leading-6 {{ colors.footerCustom.text or colors.footerDefault.text }}">
          Nice meeting you.
        </p>
        <p class="text-center sm:text-left text-sm leading-6 {{ colors.footerCopyrightCustom.text or colors.footerCustom.text or colors.footerDefault.text }}">
          &copy; {{ build.timestamp | dateToFormat('yyyy') }} {{ meta.authorName }}
        </p>
      </div>
    </div>
  </div>
</footer>